<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="21dp"
    android:paddingHorizontal="15dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/folderCv"
        android:layout_width="46dp"
        android:layout_height="46dp"
        app:cardBackgroundColor="#1A80D5"
        app:cardCornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/folderIv"
            android:layout_width="21.48dp"
            android:layout_height="16.89dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_noun_folder_3946909" />


    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/titleTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:fontFamily="@font/lato_bold"
        android:text="2021 Olimpiacos"
        android:textColor="#4A4A4A"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/folderCv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/folderCv"
        app:layout_constraintTop_toTopOf="@+id/folderCv" />

</androidx.constraintlayout.widget.ConstraintLayout>