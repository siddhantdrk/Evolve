<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="13dp"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintProfileInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvInfoImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="13dp"
            app:cardElevation="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivInfoImage"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/ic_launcher_background"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="17dp"
            android:fontFamily="@font/lato_bold"
            android:text="Olimpiacos B.C."
            android:textColor="@color/text_color"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/cvInfoImage"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="28dp"
            android:alpha="0.5"
            android:fontFamily="@font/lato"
            android:text="Piraeus, Greece"
            android:textColor="@color/text_color"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/cvInfoImage"
            app:layout_constraintTop_toBottomOf="@id/tvTitle" />

        <TextView
            android:id="@+id/tvDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="28dp"
            android:alpha="0.5"
            android:fontFamily="@font/lato"
            android:text="Jan 2021 - Present â€¢ 3mons"
            android:textColor="@color/text_color"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/cvInfoImage"
            app:layout_constraintTop_toBottomOf="@id/tvLocation" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>