<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_color"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".EducationHistory">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="37dp"
            android:layout_marginTop="89dp"
            android:fontFamily="@font/lato_bold"
            android:text="@string/step_4_education_history"
            android:textColor="@color/app_background"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtSchool"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="38dp"
            android:layout_marginTop="101dp"
            android:fontFamily="@font/lato"
            android:text="@string/school"
            android:textColor="@color/app_background"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTitle" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilSchool"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="37dp"
            android:layout_marginEnd="37dp"
            app:layout_constraintTop_toBottomOf="@id/txtSchool">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etSchool"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/app_background"
                android:fontFamily="@font/lato"
                android:inputType="textEmailAddress"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingBottom="18dp"
                android:text="Ex. Miami University"
                android:textColor="@color/app_background_with_opicity"
                android:textColorHighlight="@color/app_background"
                android:textSize="18sp"
                android:theme="@style/GreyEditTextTheme" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/txtDegree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="38dp"
            android:layout_marginTop="27.6dp"
            android:fontFamily="@font/lato"
            android:text="@string/degree"
            android:textColor="@color/app_background"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tilSchool" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilDegree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="37dp"
            android:layout_marginEnd="37dp"
            app:layout_constraintTop_toBottomOf="@id/txtDegree">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDegree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/app_background"
                android:fontFamily="@font/lato"
                android:inputType="textEmailAddress"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingBottom="18dp"
                android:text="Ex. Bachelorâ€™s Degree"
                android:textColor="@color/app_background_with_opicity"
                android:textColorHighlight="@color/app_background"
                android:textSize="18sp"
                android:theme="@style/GreyEditTextTheme" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/txtFieldOfStudy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="38dp"
            android:layout_marginTop="27.6dp"
            android:fontFamily="@font/lato"
            android:text="@string/field_of_study"
            android:textColor="@color/app_background"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tilDegree" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilFieldOfStudy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="37dp"
            android:layout_marginEnd="37dp"
            app:layout_constraintTop_toBottomOf="@id/txtFieldOfStudy">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etFieldOfStudy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/app_background"
                android:fontFamily="@font/lato"
                android:inputType="textEmailAddress"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingBottom="18dp"
                android:text="Ex. Business"
                android:textColor="@color/app_background_with_opicity"
                android:textColorHighlight="@color/app_background"
                android:textSize="18sp"
                android:theme="@style/GreyEditTextTheme" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tvContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="37dp"
            android:layout_marginTop="31.6dp"
            android:layout_marginEnd="47.25dp"
            android:fontFamily="@font/lato"
            android:gravity="center"
            android:lineSpacingExtra="6dp"
            android:text="@string/wevolv_will_send_personalized_career_opportunities_your_way"
            android:textColor="@color/app_background"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tilFieldOfStudy" />

        <TextView
            android:id="@+id/textViewSkip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="46.39dp"
            android:fontFamily="@font/lato_bold"
            android:text="@string/skip"
            android:textColor="@color/app_background"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvContent" />

        <TextView
            android:id="@+id/textViewNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="64dp"
            android:fontFamily="@font/lato_bold"
            android:text="@string/next"
            android:textColor="@color/app_background"
            android:textSize="18sp"
            app:drawableEndCompat="@drawable/ic_baseline_keyboard_arrow_right_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/textViewSkip"
            app:layout_constraintStart_toStartOf="@+id/textViewSkip"
            app:layout_constraintTop_toBottomOf="@+id/textViewSkip" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>