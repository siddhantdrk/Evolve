<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#38000000"
    android:gravity="bottom"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="25dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="7dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="22dp"
                android:letterSpacing="0.18"
                android:id="@+id/tvShareWithPhoto"
                android:paddingBottom="20dp"
                android:fontFamily="@font/lato_bold"
                android:text="@string/share_with_photo"
                android:textColor="#838383"
                android:textSize="13sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#18707070" />

            <TextView
                android:id="@+id/tvShareCodeOnly"
                android:layout_width="match_parent"
                android:letterSpacing="0.18"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="17.12dp"
                android:paddingBottom="21.88dp"
                android:fontFamily="@font/lato_bold"
                android:text="@string/share_code_only"
                android:textColor="#838383"
                android:textSize="13sp" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="50dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="7dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="17dp"
            android:fontFamily="@font/lato_bold"
            android:letterSpacing="0.18"
            android:text="@string/cancel"
            android:textColor="#838383"
            android:textSize="13sp" />
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>