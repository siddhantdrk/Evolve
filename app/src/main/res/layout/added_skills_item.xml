<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvSkillsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp"
        android:layout_marginTop="18.34dp"
        android:fontFamily="@font/lato"
        android:text="3-Point Shooting (26)"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/llItem1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSkillsTitle">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvSkillsItemLogo"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_marginStart="40.5dp"
            app:cardBackgroundColor="@color/light_grey"
            app:cardCornerRadius="14.5dp"
            app:cardElevation="0dp" />

        <TextView
            android:id="@+id/tvSkillsItemDescription1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="75.5dp"
            android:alpha="0.6"
            android:fontFamily="@font/lato"
            android:text="Endorsed by Julie Wojta, who is highly skilled at this"
            android:textColor="@color/black"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llItem2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16.19dp"
        android:layout_marginStart="42.58dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/llItem1">

        <ImageView
            android:id="@+id/ivSkillsItemLogo"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tvDescription1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="75.5dp"
            android:alpha="0.6"
            android:fontFamily="@font/lato"
            android:text="Endorsed by 4 of your team mates at Olimpiacos B.C."
            android:textColor="@color/black"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="22.81dp"
        android:layout_marginEnd="47dp"
        android:background="@color/grey_70"
        app:layout_constraintTop_toBottomOf="@id/llItem2" />

</androidx.constraintlayout.widget.ConstraintLayout>