<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingVertical="32dp"
    android:orientation="vertical"
    android:background="@color/app_background"
    tools:context=".RequestSent">


    <ImageView
        android:id="@+id/iv_request_send"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginHorizontal="48dp"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/ic_request_sent" />

    <com.android.hauntapp.CommonUtils.CustomViews.CustomRegurlarTextView
        android:id="@+id/tv_request_sent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginHorizontal="48dp"
        android:layout_marginTop="20dp"
        android:text="@string/request_sent"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/primary_color" />

    <com.app.evolve.customviews.LatoLigthTextView
        android:id="@+id/txt_request_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginHorizontal="48dp"
        android:gravity="center"
        android:text="@string/request_sent_summary"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/text_color" />

</LinearLayout>