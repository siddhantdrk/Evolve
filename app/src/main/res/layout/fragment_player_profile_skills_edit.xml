<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_background"
        android:paddingHorizontal="37dp"
        android:paddingBottom="24dp"
        tools:context=".PlayerProfileSkillsEditActivity">

        <ImageView
            android:id="@+id/backIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="31dp"
            android:layout_marginEnd="31dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"
            app:layout_constraintEnd_toStartOf="@+id/skillsTv"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/skillsTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_bold"
            android:text="@string/skills"
            android:textColor="@color/text_color"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/backIv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/backIv" />

        <TextView
            android:id="@+id/saveTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/lato_bold"
            android:text="@string/infoSave"
            android:textColor="@color/profile_setup_bg"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/backIv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toEndOf="@+id/skillsTv"
            app:layout_constraintTop_toTopOf="@+id/backIv" />

        <TextView
            android:id="@+id/selectAboutTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="53dp"
            android:fontFamily="@font/lato"
            android:text="@string/select_your_top_skills_other_players_will_be_able_to_validate_them_when_they_endorse_you"
            android:textColor="@color/black"
            android:textSize="17sp"
            app:layout_constraintTop_toBottomOf="@id/skillsTv" />

        <TextView
            android:id="@+id/selectUpToTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/lato"
            android:text="@string/select_up_to_4_options"
            android:textColor="@color/black"
            android:textSize="17sp"
            app:layout_constraintTop_toBottomOf="@+id/selectAboutTv"
            tools:layout_editor_absoluteX="37dp" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/skillsChipGrp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/selectUpToTv">

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:elevation="0dp"
                android:fontFamily="@font/lato_bold"
                android:text="Difficult to Guard"
                android:textAppearance="@style/QualitiesChipStyle"
                android:textColor="#F9FAF9"
                android:textSize="16sp"
                app:chipBackgroundColor="#69069A"
                app:chipCornerRadius="19dp"
                app:chipEndPadding="16dp"
                app:chipStartPadding="16dp" />

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:elevation="0dp"
                android:fontFamily="@font/lato_bold"
                android:text="Rebounder"
                android:textAppearance="@style/QualitiesChipStyle"
                android:textColor="#404040"
                android:textSize="16sp"
                app:chipBackgroundColor="@color/white"
                app:chipCornerRadius="19dp"
                app:chipEndPadding="16dp"
                app:chipStartPadding="16dp"
                app:chipStrokeColor="#707070"
                app:chipStrokeWidth="1dp" />

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:elevation="0dp"
                android:fontFamily="@font/lato_bold"
                android:text="Sniper"
                android:textAppearance="@style/QualitiesChipStyle"
                android:textColor="#404040"
                android:textSize="16sp"
                app:chipBackgroundColor="@color/white"
                app:chipCornerRadius="19dp"
                app:chipEndPadding="16dp"
                app:chipStartPadding="16dp"
                app:chipStrokeColor="#707070"
                app:chipStrokeWidth="1dp" />

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:elevation="0dp"
                android:fontFamily="@font/lato_bold"
                android:text="Automatic Bucket"
                android:textAppearance="@style/QualitiesChipStyle"
                android:textColor="#F9FAF9"
                android:textSize="16sp"
                app:chipBackgroundColor="#69069A"
                app:chipCornerRadius="19dp"
                app:chipEndPadding="16dp"
                app:chipStartPadding="16dp" />

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:elevation="0dp"
                android:fontFamily="@font/lato_bold"
                android:text="IQ/Smart/Clever"
                android:textAppearance="@style/QualitiesChipStyle"
                android:textColor="#404040"
                android:textSize="16sp"
                app:chipBackgroundColor="@color/white"
                app:chipCornerRadius="19dp"
                app:chipEndPadding="16dp"
                app:chipStartPadding="16dp"
                app:chipStrokeColor="#707070"
                app:chipStrokeWidth="1dp" />

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:elevation="0dp"
                android:fontFamily="@font/lato_bold"
                android:text="Game Changer"
                android:textAppearance="@style/QualitiesChipStyle"
                android:textColor="#404040"
                android:textSize="16sp"
                app:chipBackgroundColor="@color/white"
                app:chipCornerRadius="19dp"
                app:chipEndPadding="16dp"
                app:chipStartPadding="16dp"
                app:chipStrokeColor="#707070"
                app:chipStrokeWidth="1dp" />

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:elevation="0dp"
                android:fontFamily="@font/lato_bold"
                android:text="Add"
                android:textAppearance="@style/QualitiesChipStyle"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                app:chipBackgroundColor="@color/white"
                app:chipCornerRadius="19dp"
                app:chipEndPadding="16dp"
                app:chipIcon="@drawable/ic_icon_awesome_plus"
                app:chipIconSize="12dp"
                app:chipIconTint="@color/text_color"
                app:chipStartPadding="16dp"
                app:chipStrokeColor="#707070"
                app:chipStrokeWidth="1dp" />


        </com.google.android.material.chip.ChipGroup>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>