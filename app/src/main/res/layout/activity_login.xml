<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:padding="20dp"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:src="@mipmap/ic_launcher_round"
        app:layout_constraintBottom_toTopOf="@+id/txt_email"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/email_view"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/border_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_email" />

    <View
        android:id="@+id/password_view"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/border_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_password" />


    <com.android.hauntapp.CommonUtils.CustomViews.CustomBoldTextView
        android:id="@+id/tv_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/login"
        android:textColor="@color/primary_color"
        android:textSize="16sp"
        app:fontFamily="@string/lato_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.android.hauntapp.CommonUtils.CustomViews.CustomRegularEditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/transparent"
        android:inputType="textPassword"
        android:text="Davis.jori@gmail.com"
        android:textColor="@color/text_color"
        app:layout_constraintTop_toBottomOf="@+id/txt_passowrd"
        tools:layout_editor_absoluteX="16dp" />

    <com.android.hauntapp.CommonUtils.CustomViews.CustomRegularEditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="textEmailAddress"
        android:background="@android:color/transparent"
        android:text="Davis.jori@gmail.com"
        android:textColor="@color/text_color"
        app:layout_constraintTop_toBottomOf="@+id/txt_email"
        tools:layout_editor_absoluteX="16dp" />


    <com.android.hauntapp.CommonUtils.CustomViews.CustomRegurlarTextView
        android:id="@+id/txt_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:textColor="@color/text_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.android.hauntapp.CommonUtils.CustomViews.CustomRegurlarTextView
        android:id="@+id/txt_passowrd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/password"
        android:textColor="@color/text_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_view" />

</androidx.constraintlayout.widget.ConstraintLayout>