<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintContact"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="36.32dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvLogo"
        android:layout_width="37.5dp"
        android:layout_height="37.5dp"
        app:cardBackgroundColor="@color/light_grey"
        app:cardCornerRadius="18.75dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="18.25dp"
            android:layout_height="18.25dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher_background" />

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tvContactSiteName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10.5dp"
        android:fontFamily="@font/lato"
        android:text="LinkedIn"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/cvLogo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvContactEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11.75dp"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/lato"
        android:text="Linkedin.com/joridavis"
        android:textColor="@color/profile_info_label"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@+id/cvLogo"
        app:layout_constraintTop_toBottomOf="@id/tvContactSiteName" />

</androidx.constraintlayout.widget.ConstraintLayout>

