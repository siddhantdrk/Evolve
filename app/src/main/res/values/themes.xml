<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Evolve" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/border_color</item>
        <item name="colorSecondaryVariant">@color/border_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="EditTextTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorControlNormal">@color/border_color</item>
        <item name="colorControlActivated">@color/border_color</item>
        <item name="colorControlHighlight">@color/border_color</item>
    </style>

    <style name="latoregularfont">
        <item name="fontFamily">@fonts/Lato-Regular</item>
        <item name="android:fontFamily">@fonts/Lato-Regular</item>
    </style>

    <style name="Baroque" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#F2BAD0</item>
        <item name="android:textSize">14pt</item>
        <item name="fontFamily">@fonts/Lato-Regular</item>
    </style>

    <style name="latoboldfont" parent="TextAppearance.AppCompat.Body1">
        <item name="fontFamily">@fonts/Lato-Bold.ttf</item>
        <item name="android:fontFamily">@fonts/Lato-Boldttf</item>
    </style>

    <style name="SheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <!--<item name="android:windowCloseOnTouchOutside">false</item>-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="Theme.Evolve.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Evolve.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Evolve.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="fontFamily">@font/lato</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:color">#838383</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="DialogSlideAnim" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>